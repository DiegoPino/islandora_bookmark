function islandora_bookmark_fedora_repository_object_form($form, &$form_state, $pid) {
  global $user;
  
  module_load_include('inc', 'islandora_bookmark', 'islandora_bookmark_api');
 
  $containing_lists = get_bookmarks_visible_to_user($pid, $user->uid);
   
  if (count($containing_lists) > 0) {
    $form = array(
      '#prefix' => '<div id="islandora_bookmark">',
      '#suffix' => '</div>',
      'title' => array(
        '#type' => 'item',
        '#markup' => t('In Bookmarks'),
        '#prefix' => '<h3>',
        '#suffix' => '</h3>',
      ),
    );
    $form['ul'] = array(
      '#prefix' => '<ul>',
      '#suffix' => '</ul>',
    );
    foreach ($containing_lists as $key => $value) {
      $bookmark_object = get_bookmark_by_number($value);
      $form['ul'][$bookmark_object->bookmark_name] = array(
        '#type' => 'item',
        '#markup' => l($bookmark_object->bookmark_name, 'islandora_bookmark/listid/' . $bookmark_object->bookmark_id, array(
              'attributes' => array(
                'target' => '_blank'
                ))),
        '#prefix' => '<li>',
        '#suffix' => '</li>',
      );
    }
    
  }
  
  $owned_results = db_query('SELECT listname, listid from {islandora_bookmark_list_names} WHERE listowner = :listowner', array(':listowner' => $user->uid));
  $owned_lists = array();
  foreach ($owned_results as $record) {
    $owned_lists[$record->listid] = $record->listname;
  }
 
  if (count($owned_lists) > 0) {
    $options = array_diff_key($owned_lists, $containing_lists);
    if (count($options) > 0) {
      $form['islandora_bookmark']['add_bookmarks'] = array(
        '#type' => 'select',
        '#options' => $options,
      );
      $form['islandora_bookmark']['add_button'] = array(
        '#type' => 'submit',
        '#value' => t('Add object to bookmark'),
        '#ajax' => array(
             'event' => 'click',
             'callback' => 'islandora_bookmark_add_pid',
             'wrapper' => 'islandora_bookmark',
             'method' => 'replace',          
           ),
      );
    }
  }
   
  $form_state['islandora_bookmark_pid'] = $pid;
  return $form;
}


